#include <stdio.h>
#include <stdlib.h>
#include <omp.h>

typedef double real;

int main() {
    long long int i, n=10000000000;
    double start_time, end_time;
    double x, pi;
    double sum = 0.0;
    double step = 1.0/(double) n; 

    StartTimer();
    for (i = 0; i < n; i++) {
        x = (i+0.5)*step;
        sum = sum + 4.0/(1.0+x*x);
    }
    pi = step * sum;

    // Print out the execution time.
    real runtime = GetTimer();
    printf(" total time: %f sec\n", runtime / 1000);

    printf("pi = %17.15f\n",pi);
    return 0;
}
